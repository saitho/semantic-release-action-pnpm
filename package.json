{
  "name": "semantic-release-action-pnpm",
  "version": "1.0.0",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "license": "MIT",
  "description": "GitHub Action for semantic-release using pnpm",
  "keywords": [
    "semantic-release",
    "github-action",
    "pnpm"
  ],
  "author": {
    "name": "cherryblossom",
    "url": "https://github.com/cherryblossom000"
  },
  "homepage": "https://github.com/cherryblossom/semantic-release-action-pnpm#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/cherryblossom000/semantic-release-action-pnpm"
  },
  "bugs": {
    "url": "https://github.com/cherryblossom000/semantic-release-action-pnpm/issues"
  },
  "main": "dist/index.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc --sourceMap --incremental",
    "watch": "tsc -watch --sourceMap --incremental"
  },
  "dependencies": {
    "@actions/core": "^1.2.3",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "semantic-release": "17"
  },
  "devDependencies": {
    "@types/node": "^13.9.0",
    "@types/semantic-release": "^15.13.1",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "typescript": "^3.8.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
